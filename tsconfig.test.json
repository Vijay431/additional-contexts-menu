{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/compiled",
    "rootDir": "./",
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["test/fixtures/**/*.ts", "node_modules"]
}
