{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts", 
    "test/e2e/**/*.ts"
  ],
  "exclude": [
    "test/suite/**/*",
    "test/fixtures/**/*.ts", 
    "test/runTest.ts",
    "node_modules"
  ]
}
